all:
	$(KOS_MAKE) -C 2ndmix
	$(KOS_MAKE) -C basic
	$(KOS_MAKE) -C libdream
	$(KOS_MAKE) -C kgl
	$(KOS_MAKE) -C hello
	$(KOS_MAKE) -C sound
	$(KOS_MAKE) -C png
	$(KOS_MAKE) -C network
	$(KOS_MAKE) -C vmu
	$(KOS_MAKE) -C conio
	$(KOS_MAKE) -C pvr
	$(KOS_MAKE) -C video
	$(KOS_MAKE) -C lua
	$(KOS_MAKE) -C parallax
	$(KOS_MAKE) -C modem
